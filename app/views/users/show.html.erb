<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                <table class="table">
                    <tr>
                        <%# <%= attachment_image_tag @user, :image, :fill, 30, 30, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                        %>
                    </tr>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </table>
                <% if @user.id == current_user.id %>
                <div class="row">
                    <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
                    </p>
                </div>
                <% end %>
                <h2>New Book</h2>
                <%= form_for(@book, url: book_path) do |f| %>
                <div class="field row">
                    <label for="book_title">Title</label>
                    <%= f.text_field :title, class:"form-control"%>
                </div>
                <div class="field row">
                    <label for="book_opinion">Opinion</label>
                    <%= f.text_field :opinion, class:"form-control"%>
                </div>
                <div class="actions row">

                </div>
                <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                <% end %>


            </div>

        </div>

    </div>

</div>