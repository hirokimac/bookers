<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <h2>User info</h2>
                <table class="table">
                    <tr>
                        <%= attachment_image_tag @user, :profile_image, :fill, 30, 30, class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                    </tr>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </table>
                <% if @user.id == current_user.id %>
                <div class="row">
                    <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
                    </p>
                </div>
                <% end %>

                <h2>New Book</h2>
                <%= form_for(@book) do |f| %>
                <div class="field row">
                    <label for="book_title">Title</label>
                    <%= f.text_field :title , class:"form-control" %>
                </div>
                <div class="field row">
                    <label for="book_opinion">Opinion</label>
                    <%= f.text_area :body , class:"form-control" %>
                </div>
                <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                <% end %>
            </div>

            <div class="col-xs-9">
                <h2>Books</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                        <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan="3"></th>
                        </tr>
                        <% @books.each do |book| %>
                        <tr>
                            <td>
                                <%= link_to user_path(book.user_id) do %>
                                <%= attachment_image_tag book.user,:profile_image, :fill, 30, 30, class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                                <% end %>
                            </td>
                            <td>
                                <%= link_to book.title, book_path(book.id) %>
                            </td>
                            <td>
                                <%= book.body %>
                            </td>
                        </tr>
                        <% end %>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>

        </div>

    </div>

</div>