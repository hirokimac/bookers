<div class="body">
    <div class="container">
        <div class="row">
            <div class="col-xs-3">
                <%= render 'list', user: @user %>
            </div>

            <div class="col-xs-9">
                <h2>Users</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th></th>
                            <th>image</th>
                            <th>name</th>
                            <th colspan="3"></th>
                        </tr>
                        <% @users.each do |user| %>
                        <tr>
                            <td>
                                <%= link_to user_path(user) do %>
                                <%= attachment_image_tag user,:profile_image, :fill, 30, 30, class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
                                <% end %>
                            </td>
                            <td>
                                <%= user.name%>
                            </td>
                            <td class="following-count">
                                フォロー数：<%= user.followings.count %>
                            </td>
                            <td class="follower-count">
                                フォロワー数：<%= user.followers.count %>
                            </td>
                            <td>
                                <% unless current_user == user %>
                                <% if current_user.following?(user) %>
                                <%= link_to "フォロー外す", user_relationship_path(current_user.id , user.id) , method: :delete %>
                                <% else %>
                                <%= link_to "フォローする", user_relationships_path(user.id) , method: :post %>
                                <% end %>
                                <% end %> </td>
                            <td>
                            <%= "id: #{user.id} email: #{user.email}" %>
                            <% if current_user.following?(user) %>
                            <%= link_to "フォロー外す", unfollow_path(user.id), method: :post %>
                            <% else %>
                            <%= link_to "フォローする" , follow_path(user.id), method: :post %>
                            <% end %>
                            </td>
                            <td>
                                <%= link_to user_path(user.id) do %>
                                Show
                                <% end %>
                            </td>
                        </tr>
                        <% end %>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                
            </div>

        </div>

    </div>

</div>